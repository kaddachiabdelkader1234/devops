pipeline {
    agent any
    
    tools {
        maven 'Maven'
        jdk   'JDK17'
    }
    
    stages {
        stage('Checkout Git') {
            steps {
                echo 'ğŸ“¥ Cloning repository...'
                git credentialsId: 'github-credentials', 
                    branch: 'main', 
                    url: 'https://github.com/kaddachiabdelkader1234/devops.git'
            }
        }
        
        stage('Build with Maven') {
            steps {
                echo 'ğŸ“¦ Building with Maven...'
                sh 'mvn clean install -DskipTests'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                echo 'ğŸ” Analyzing code quality...'
                script {
                    withSonarQubeEnv('devops') {
                        sh 'mvn sonar:sonar -Dsonar.projectKey=student-management'
                    }
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Building Docker image...'
                sh 'docker build -t abdelkaderkaddachi/student-management -f Dockerfile .'
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                echo 'ğŸ“¤ Pushing to Docker Hub...'
                script {
                    withCredentials([usernamePassword(
                        credentialsId: 'devops1', 
                        usernameVariable: 'DOCKER_USER', 
                        passwordVariable: 'DOCKER_PASS')]) {
                        sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                        sh 'docker push abdelkaderkaddachi/student-management:latest'
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'âœ… Pipeline successful!'
        }
        failure {
            echo 'âŒ Pipeline failed!'
        }
    }
}
