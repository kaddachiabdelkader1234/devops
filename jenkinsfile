pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    environment {
        APP_ENV = "DEV"
    }
    stages {
        stage('Code Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/kaddachiabdelkader1234/devops.git'
            }
        }
        stage('Code Build') {
            steps {
                sh 'mvn -version'
            }
        }
    }
    post {
        always { echo "======always======" }
        success { echo "=====pipeline executed successfully =====" }
        failure { echo "======pipeline execution failed======" }
    }
}
